<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="abstractMacysTask" abstract="true" class="com.griddynamics.jagger.engine.e1.scenario.WorkloadTask">
        <property name="collectors">
            <list>
                <ref bean="durationCollector"/>
                <ref bean="informationCollector"/>
                <ref bean="diagnosticCollector"/>
            </list>
        </property>
    </bean>


    <bean id="searchProductsInvoker" class="com.griddynamics.jagger.demo.macys.SearchProductsInvoker">
    </bean>

    <bean id="searchProductScenario" class="com.griddynamics.jagger.invoker.QueryPoolScenarioFactory">

        <property name="loadBalancer">
            <bean class="com.griddynamics.jagger.invoker.RoundRobinLoadBalancer">

                <constructor-arg>
                    <bean class="com.griddynamics.jagger.demo.macys.SearchProductsQueryPool">
                    </bean>
                </constructor-arg>
                <constructor-arg>
                    <list>
                        <value>http://172.16.72.19:8080/sdp/services/CatalogService/v1</value>
                    </list>
                </constructor-arg>
            </bean>
        </property>
        <property name="invoker" ref="searchProductsInvoker"/>
    </bean>

    <bean id="searchProducts" class="com.griddynamics.jagger.engine.e1.scenario.WorkloadTask" parent="abstractMacysTask">
        <property name="name" value="search-products"/>
        <property name="version" value="1" />
        <property name="scenarioFactory" ref="searchProductScenario" />
    </bean>

    <bean id="macysWorkloadTasksGenerator" class="com.griddynamics.jagger.master.configuration.WorkloadTasksGenerator">
        <property name="prototypes">
            <list>
                <ref bean="searchProducts"/>
            </list>
        </property>
        <property name="clocks">
            <list>
                <bean class="com.griddynamics.jagger.engine.e1.scenario.VirtualUsersClockConfiguration">
                    <property name="tickInterval" value="1000"/>
                    <property name="users" value="10"/>
                </bean>
                <bean class="com.griddynamics.jagger.engine.e1.scenario.VirtualUsersClockConfiguration">
                    <property name="tickInterval" value="1000"/>
                    <property name="users" value="20"/>
                </bean>
            </list>
        </property>
        <property name="terminations">
            <list>
                <bean class="com.griddynamics.jagger.engine.e1.scenario.TerminateByDuration">
                    <property name="seconds" value="10"/>
                </bean>
                <!--
                                <bean class="com.griddynamics.jagger.engine.e1.scenario.TerminateByDuration">
                                    <property name="seconds" value="60"/>
                                </bean>
                -->
            </list>
        </property>
        <property name="attendantMonitoring">
            <bean class="com.griddynamics.jagger.monitoring.MonitoringTask">
                <property name="name" value="Monitoring"/>
                <property name="terminationStrategy">
                    <bean class="com.griddynamics.jagger.monitoring.InfiniteDuration"/>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="macysDemoConfiguration" class="com.griddynamics.jagger.master.configuration.Configuration">
        <property name="tasks" value="#{macysWorkloadTasksGenerator.generate()}"/>

        <property name="sessionExecutionListeners">
            <list>
                <ref bean="basicSessionCollector"/>
                <ref bean="basicAggregator"/>
            </list>
        </property>
        <property name="taskExecutionListeners">
            <list>
                <ref bean="basicSessionCollector"/>
                <ref bean="e1MasterCollector"/>
                <ref bean="basicAggregator"/>
                <ref bean="e1ScenarioAggregator"/>
                <ref bean="durationLogProcessor"/>
                <ref bean="monitoringAggregator"/>
            </list>
        </property>
    </bean>


</beans>

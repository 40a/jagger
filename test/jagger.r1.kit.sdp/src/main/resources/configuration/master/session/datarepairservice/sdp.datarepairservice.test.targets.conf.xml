    <bean id="makeUPCUnavailableRepairCategoryRecursiveCatalogDataRepairService"
          parent="dataRepairServiceTestTargetAbstractWorkload">
        <property name="name" value="updateAvailability-[make-upc-unavailable-repair-category-recursive]-hessian"/>
        <property name="version" value="1"/>
        <property name="scenarioFactory"
                  ref="makeUPCUnavailableRepairCategoryRecursiveCatalogDataRepairServiceQueryScenario"/>
    </bean>

    <bean id="makeUPCAvailableRepairCategoryRecursiveWithProductsAndUPCSCatalogDataRepairService"
          parent="dataRepairServiceTestTargetAbstractWorkload">
        <property name="name"
                  value="updateAvailability-[make-upc-available-repair-category-recursive-with-products-and-upcs]-hessian"/>
        <property name="version" value="1"/>
        <property name="scenarioFactory"
                  ref="makeUPCAvailableRepairCategoryRecursiveWithProductsAndUPCSCatalogDataRepairServiceQueryScenario"/>
    </bean>

    <bean id="makeUPCUnavailableRepairCategoryRecursiveWithProductsAndUPCSCatalogDataRepairService"
          parent="dataRepairServiceTestTargetAbstractWorkload">
        <property name="name"
                  value="updateAvailability-[make-upc-unavailable-repair-category-recursive-with-products-and-upcs]-hessian"/>
        <property name="version" value="1"/>
        <property name="scenarioFactory"
                  ref="makeUPCUnavailableRepairCategoryRecursiveWithProductsAndUPCSCatalogDataRepairServiceQueryScenario"/>
    </bean>


</beans>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="getCategoryTreeCatalogServiceTestTargetAbstractWorkload" abstract="true" parent="sdpPerfTestAbstractWorkload">
        <property name="collectors">
            <list>
                <ref bean="durationCollector"/>
                <ref bean="informationCollector"/>
                <ref bean="diagnosticCollector"/>
                <bean class="com.griddynamics.jagger.engine.e1.collector.ValidationCollectorProvider">
                    <property name="validator">
                        <bean class="com.griddynamics.jagger.engine.e1.scenario.ReflectionProvider">
                            <property name="clazz" value="com.griddynamics.jagger.engine.e1.collector.NotNullResponseValidator" />
                        </bean>
                    </property>
                </bean>
                <bean id="validationCollectorProvider"
                      class="com.griddynamics.jagger.engine.e1.collector.ValidationCollectorProvider">
                    <property name="validator">
                        <bean class="com.griddynamics.jagger.engine.e1.collector.ConsistencyValidatorProvider">
                            <property name="resultEq" ref="categoryIDsEquivalence"/>
                            <property name="queryEq" ref="categoryTreeQueryDTOEquivalence_CatalogService"/>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="getCategoryTreeCatalogService" parent="getCategoryTreeCatalogServiceTestTargetAbstractWorkload">
        <property name="name" value="[catalog-service]-getCategoryTree-hessian"/>
        <property name="version" value="1"/>
        <property name="scenarioFactory" ref="getCategoryTreeCatalogServiceScenario"/>
    </bean>

    <bean id="getCategoryTreeCatalogServiceFullInfo" parent="getCategoryTreeCatalogServiceTestTargetAbstractWorkload">
        <property name="name" value="[catalog-service]-getCategoryTree-FullInfo-hessian"/>
        <property name="version" value="1"/>
        <property name="scenarioFactory" ref="getCategoryTreeCatalogServiceFullInfoScenario"/>
    </bean>

</beans>
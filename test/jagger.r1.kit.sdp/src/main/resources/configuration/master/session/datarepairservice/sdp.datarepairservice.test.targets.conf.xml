<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dataRepairServiceTestTargetAbstractWorkload" abstract="true" parent="sdpPerfTestAbstractWorkload">
        <property name="clockConfiguration">
            <bean class="com.griddynamics.jagger.engine.e1.scenario.VirtualUsersClockConfiguration">
                <property name="tickInterval" value="1000"/>
                <property name="users" value="1"/>
            </bean>
        </property>
        <property name="terminateStrategyConfiguration">
            <bean class="com.griddynamics.jagger.engine.e1.scenario.TerminateByTotalSampling">
                <property name="samples" value="2"/>
            </bean>
        </property>
        <property name="collectors">
            <list>
                <ref bean="durationCollector"/>
                <ref bean="informationCollector"/>
                <ref bean="diagnosticCollector"/>
                <bean class="com.griddynamics.jagger.engine.e1.collector.ValidationCollectorProvider">
                    <property name="validator">
                        <bean class="com.griddynamics.jagger.engine.e1.scenario.ReflectionProvider">
                            <property name="clazz"
                                      value="com.griddynamics.jagger.engine.e1.collector.NotNullResponseValidator"/>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>
        <property name="calibrator">
            <bean class="com.griddynamics.jagger.engine.e1.scenario.SkipCalibration"/>
        </property>
    </bean>

    <bean id="oneCategoryCatalogDataRepairService" parent="dataRepairServiceTestTargetAbstractWorkload">
        <property name="name" value="dataRepair-[one-category]-hessian"/>
        <property name="version" value="1"/>
        <property name="scenarioFactory" ref="oneCategoryCatalogDataRepairServiceScenario"/>
    </bean>

    <bean id="topLevelCategoryManCatalogDataRepairService" parent="dataRepairServiceTestTargetAbstractWorkload">
        <property name="name" value="dataRepair-[top-level-category-man]-hessian"/>
        <property name="version" value="1"/>
        <property name="scenarioFactory" ref="topLevelCategoryManCatalogDataRepairServiceScenario"/>
    </bean>

    <bean id="topLevelCategoryWomanCatalogDataRepairService" parent="dataRepairServiceTestTargetAbstractWorkload">
        <property name="name" value="dataRepair-[top-level-category-woman]-hessian"/>
        <property name="version" value="1"/>
        <property name="scenarioFactory" ref="topLevelCategoryWomanCatalogDataRepairServiceScenario"/>
    </bean>

    <bean id="topLevelCategoryManRecursiveCatalogDataRepairService"
          parent="dataRepairServiceTestTargetAbstractWorkload">
        <property name="name" value="dataRepair-[top-level-category-man-recursive]-hessian"/>
        <property name="version" value="1"/>
        <property name="scenarioFactory" ref="topLevelCategoryManRecursiveCatalogDataRepairServiceScenario"/>
    </bean>

    <bean id="topLevelCategoryRecursiveWithProductSandUpcsCatalogDataRepairService"
          parent="dataRepairServiceTestTargetAbstractWorkload">
        <property name="name" value="dataRepair-[top-level-category-man-recursive-with-products-upcs]-hessian"/>
        <property name="version" value="1"/>
        <property name="scenarioFactory"
                  ref="topLevelCategoryRecursiveWithProductSandUpcsCatalogDataRepairServiceScenario"/>
    </bean>

    <bean id="dataRefreshService" parent="dataRepairServiceTestTargetAbstractWorkload">
        <property name="terminateStrategyConfiguration">
            <bean class="com.griddynamics.jagger.engine.e1.scenario.TerminateByTotalSampling">
                <property name="samples" value="1"/>
            </bean>
        </property>
        <property name="name" value="dataRefresh"/>
        <property name="version" value="1"/>
        <property name="scenarioFactory" ref="dataRefreshScenario"/>
    </bean>

    <bean id="makeUPCAvailableRepairProductUpcsCatalogDataRepairService"
          parent="dataRepairServiceTestTargetAbstractWorkload">
        <property name="name" value="updateAvailability-[make-upc-available-repair-product-upcs]-hessian"/>
        <property name="version" value="1"/>
        <property name="scenarioFactory" ref="makeUPCAvailableRepairProductUpcsCatalogDataRepairServiceQueryScenario"/>
    </bean>

    <bean id="makeUPCUnavailableRepairProductUpcsCatalogDataRepairService"
          parent="dataRepairServiceTestTargetAbstractWorkload">
        <property name="name" value="updateAvailability-[make-upc-unavailable-repair-product-upcs]-hessian"/>
        <property name="version" value="1"/>
        <property name="scenarioFactory"
                  ref="makeUPCUnavailableRepairProductUpcsCatalogDataRepairServiceQueryScenario"/>

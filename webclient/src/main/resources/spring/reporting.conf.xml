<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--==========Workload Plot Groups==========-->

    <bean id="workloadPlotGroups" class="java.util.LinkedHashMap">
        <constructor-arg index="0">
            <map>
                <entry>
                    <key>
                        <bean class="com.griddynamics.jagger.monitoring.reporting.GroupKey">
                            <constructor-arg index="0" value="Throughput"/>
                        </bean>
                    </key>
                    <array value-type="com.griddynamics.jagger.webclient.server.DefaultWorkloadParameters">
                        <value>THROUGHPUT</value>
                    </array>
                </entry>

                <entry>
                    <key>
                        <bean class="com.griddynamics.jagger.monitoring.reporting.GroupKey">
                            <constructor-arg index="0" value="Latency"/>
                        </bean>
                    </key>
                    <array value-type="com.griddynamics.jagger.webclient.server.DefaultWorkloadParameters">
                        <value>LATENCY</value>
                        <value>LATENCY_STD_DEV</value>
                    </array>
                </entry>

                <entry>
                    <key>
                        <bean class="com.griddynamics.jagger.monitoring.reporting.GroupKey">
                            <constructor-arg index="0" value="Time Latency Percentile"/>
                        </bean>
                    </key>
                    <array value-type="com.griddynamics.jagger.webclient.server.DefaultWorkloadParameters">
                        <value>TIME_LATENCY_PERCENTILE_40</value>
                        <value>TIME_LATENCY_PERCENTILE_50</value>
                        <value>TIME_LATENCY_PERCENTILE_60</value>
                        <value>TIME_LATENCY_PERCENTILE_70</value>
                        <value>TIME_LATENCY_PERCENTILE_80</value>
                        <value>TIME_LATENCY_PERCENTILE_90</value>
                        <value>TIME_LATENCY_PERCENTILE_95</value>
                        <value>TIME_LATENCY_PERCENTILE_99</value>
                    </array>
                </entry>

            </map>
        </constructor-arg>
    </bean>

    <!--==========Monitoring Plot Groups==========-->

    <bean id="monitoringPlotGroups" class="java.util.LinkedHashMap">
        <constructor-arg index="0">
            <map>
                <entry>
                    <key>
                        <bean class="com.griddynamics.jagger.monitoring.reporting.GroupKey">
                            <constructor-arg index="0" value="CPU Utilization"/>
                        </bean>
                    </key>
                    <array value-type="com.griddynamics.jagger.agent.model.DefaultMonitoringParameters">
                        <value>CPU_STATE_SYSTEM_PERC</value>
                        <value>CPU_STATE_USER_PERC</value>
                    </array>
                </entry>

                <entry>
                    <key>
                        <bean class="com.griddynamics.jagger.monitoring.reporting.GroupKey">
                            <constructor-arg index="0" value="CPU Load Average"/>
                        </bean>
                    </key>
                    <array value-type="com.griddynamics.jagger.agent.model.DefaultMonitoringParameters">
                        <value>CPU_LOAD_AVERAGE_1</value>
                        <value>CPU_LOAD_AVERAGE_5</value>
                        <value>CPU_LOAD_AVERAGE_15</value>
                    </array>
                </entry>

                <entry>
                    <key>
                        <bean class="com.griddynamics.jagger.monitoring.reporting.GroupKey">
                            <constructor-arg index="0" value="System Memory"/>
                        </bean>
                    </key>
                    <array value-type="com.griddynamics.jagger.agent.model.DefaultMonitoringParameters">
                        <value>MEM_TOTAL</value>
                        <value>MEM_USED</value>
                        <value>MEM_FREE</value>
                        <value>MEM_ACTUAL_USED</value>
                        <value>MEM_ACTUAL_FREE</value>
                    </array>
                </entry>

                <entry>
                    <key>
                        <bean class="com.griddynamics.jagger.monitoring.reporting.GroupKey">
                            <constructor-arg index="0" value="TCP Connections"/>
                        </bean>
                    </key>
                    <array value-type="com.griddynamics.jagger.agent.model.DefaultMonitoringParameters">
                        <value>TCP_LISTEN</value>
                        <value>TCP_ESTABLISHED</value>
                    </array>
                </entry>

                <entry>
                    <key>
                        <bean class="com.griddynamics.jagger.monitoring.reporting.GroupKey">
                            <constructor-arg index="0" value="TCP Traffic"/>
                        </bean>
                    </key>
                    <array value-type="com.griddynamics.jagger.agent.model.DefaultMonitoringParameters">
                        <value>TCP_INBOUND_TOTAL</value>
                        <value>TCP_OUTBOUND_TOTAL</value>
                    </array>
                </entry>

                <entry>
                    <key>
                        <bean class="com.griddynamics.jagger.monitoring.reporting.GroupKey">
                            <constructor-arg index="0" value="GC major count"/>
                        </bean>
                    </key>
                    <array value-type="com.griddynamics.jagger.agent.model.DefaultMonitoringParameters">
                        <value>JMX_GC_MAJOR_UNIT</value>
                    </array>
                </entry>

                <entry>
                    <key>
                        <bean class="com.griddynamics.jagger.monitoring.reporting.GroupKey">
                            <constructor-arg index="0" value="GC major time"/>
                        </bean>
                    </key>
                    <array value-type="com.griddynamics.jagger.agent.model.DefaultMonitoringParameters">
                        <value>JMX_GC_MAJOR_TIME</value>
                    </array>
                </entry>

                <entry>
                    <key>
                        <bean class="com.griddynamics.jagger.monitoring.reporting.GroupKey">
                            <constructor-arg index="0" value="GC minor count"/>
                        </bean>
                    </key>
                    <array value-type="com.griddynamics.jagger.agent.model.DefaultMonitoringParameters">
                        <value>JMX_GC_MINOR_UNIT</value>
                    </array>
                </entry>

                <entry>
                    <key>
                        <bean class="com.griddynamics.jagger.monitoring.reporting.GroupKey">
                            <constructor-arg index="0" value="GC minor time"/>
                        </bean>
                    </key>
                    <array value-type="com.griddynamics.jagger.agent.model.DefaultMonitoringParameters">
                        <value>JMX_GC_MINOR_TIME</value>
                    </array>
                </entry>

                <entry>
                    <key>
                        <bean class="com.griddynamics.jagger.monitoring.reporting.GroupKey">
                            <constructor-arg index="0" value="Heap Memory"/>
                            <constructor-arg index="1" value="Heap Memory, MiB"/>
                        </bean>
                    </key>
                    <array value-type="com.griddynamics.jagger.agent.model.DefaultMonitoringParameters">
                        <value>HEAP_MEMORY_INIT</value>
                        <value>HEAP_MEMORY_USED</value>
                        <value>HEAP_MEMORY_COMMITTED</value>
                        <value>HEAP_MEMORY_MAX</value>
                    </array>
                </entry>

                <entry>
                    <key>
                        <bean class="com.griddynamics.jagger.monitoring.reporting.GroupKey">
                            <constructor-arg index="0" value="Non Heap Memory"/>
                            <constructor-arg index="1" value="Non Heap Memory, MiB"/>
                        </bean>
                    </key>
                    <array value-type="com.griddynamics.jagger.agent.model.DefaultMonitoringParameters">
                        <value>NON_HEAP_MEMORY_INIT</value>
                        <value>NON_HEAP_MEMORY_USED</value>
                        <value>NON_HEAP_MEMORY_COMMITTED</value>
                        <value>NON_HEAP_MEMORY_MAX</value>
                    </array>
                </entry>

            </map>
        </constructor-arg>
    </bean>

    <!--==========Legend Provider==========-->
    <bean id="legendProvider" class="com.griddynamics.jagger.webclient.server.LegendProvider"/>

    <!--==========Workload Plot Data Providers-->
    <bean id="throughputPlotDataProvider" class="com.griddynamics.jagger.webclient.server.plot.ThroughputPlotDataProvider">
        <property name="legendProvider" ref="legendProvider"/>
    </bean>
    <bean id="latencyPlotDataProvider" class="com.griddynamics.jagger.webclient.server.plot.LatencyPlotDataProvider">
        <property name="legendProvider" ref="legendProvider"/>
    </bean>
    <bean id="timeLatencyPercentilePlotDataProvider" class="com.griddynamics.jagger.webclient.server.plot.TimeLatencyPercentilePlotDataProvider">
        <property name="legendProvider" ref="legendProvider"/>
    </bean>

    <bean id="workloadPlotDataProviders" class="java.util.LinkedHashMap">
        <constructor-arg index="0">
            <map>
                <entry key="Throughput" value-ref="throughputPlotDataProvider"/>
                <entry key="Latency" value-ref="latencyPlotDataProvider"/>
                <entry key="Time Latency Percentile" value-ref="timeLatencyPercentilePlotDataProvider"/>
            </map>
        </constructor-arg>
    </bean>

    <!--===========Monitoring Plot Data Providers===========-->
    <bean id="monitoringPlotDataProvider" class="com.griddynamics.jagger.webclient.server.plot.MonitoringPlotDataProvider">
        <constructor-arg index="0" ref="monitoringPlotGroups"/>
        <property name="legendProvider" ref="legendProvider"/>
    </bean>

    <bean id="monitoringPlotDataProviders" class="java.util.LinkedHashMap">
        <constructor-arg index="0">
            <map>
                <entry key="CPU Utilization" value-ref="monitoringPlotDataProvider"/>
                <entry key="CPU Load Average" value-ref="monitoringPlotDataProvider"/>
                <entry key="System Memory" value-ref="monitoringPlotDataProvider"/>
                <entry key="TCP Connections" value-ref="monitoringPlotDataProvider"/>
                <entry key="TCP Traffic" value-ref="monitoringPlotDataProvider"/>

                <entry key="GC major count" value-ref="monitoringPlotDataProvider"/>
                <entry key="GC major time" value-ref="monitoringPlotDataProvider"/>
                <entry key="GC minor count" value-ref="monitoringPlotDataProvider"/>
                <entry key="GC minor time" value-ref="monitoringPlotDataProvider"/>
                <entry key="Heap Memory" value-ref="monitoringPlotDataProvider"/>
                <entry key="Non Heap Memory" value-ref="monitoringPlotDataProvider"/>
            </map>
        </constructor-arg>
    </bean>

</beans>
